---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <article class="post post-card <%= 'post-card--first' if i === 0 %>">
    <div class="card">
      <header class="card__header">
        <div class="post__header__wrapper">
          <div class="post__eyecatch" <%= "style=\"background-image: url(#{article.data.image})\"" if article.data.image.present? %>></div>
          <header class="post__header">
            <time class="post__published">
              <%= article.date.strftime config[:date_format] %>
            </time>
            <h1 class="post__title">
              <%= link_to article.title, article, :class => 'post__title__link' %>
            </h1>
            <ul class="post__tags">
              <% article.tags.each do |tag| %>
                <li>
                  <%= link_to tag, tag_path(tag), :class => 'post__tags__tag' %>
                </li>
              <% end %>
            </ul>
          </header>
        </div>
      </header>
      <section class="card__body">
        <div class="post__content markdown">
          <%= article.summary %>
        </div>
      </section>
      <footer class="card__footer card__footer--nopad">
        <a href="<%= article.url %>" class="post-card__readmore">
          Continue Reading...
          <i class="fa fa-chevron-right"></i>
        </a>
      </footer>
    </div>
  </article>
<% end %>

<% if paginate && num_pages > 1 %>
  <ul class="pagination">
    <% if page_number > 2 %>
      <li>
        <a href="/" class="pagination__link">
          <i class="fa fa-angle-double-left"></i>
        </a>
      </li>
    <% end %>
    <% if prev_page %>
      <li>
        <a href="<%= prev_page.url %>" class="pagination__link">
          <i class="fa fa-angle-left"></i>
        </a>
      </li>
    <% end %>
    <li>
      <span class="pagination__stat">
        <%= page_number %> / <%= num_pages %>
      </span>
    </li>
    <% if next_page %>
      <li>
        <a href="<%= next_page.url %>" class="pagination__link">
          <i class="fa fa-angle-right"></i>
        </a>
      </li>
    <% end %>
    <% if page_number + 2 <= num_pages %>
      <li>
        <a href="/page/<%= num_pages %>/" class="pagination__link">
          <i class="fa fa-angle-double-right"></i>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>
